<% layout("/layouts/boilerplate") %> 

<body>
    
  <style>
    #filters {
      display: flex;
      gap: 32px; /* space between filter items */
      padding: 20px;
    }
    
    .filter {
      display: flex;
      flex-direction: column;
      align-items: center;
      font-size: 10px;
      color: #555;
      cursor: pointer;
      transition: color 0.3s;
    }
    
    .filter i {
      font-size: 24px;
      margin-bottom: 6px;
      color: #555;
    }
    .filter:hover {
      color: black;
    }
    
    .filter:hover i {
      color: red;
    }
    .filter:hover span {
      font-weight: 600;
    }
    .toggle-switch {
      display: flex;
      align-items: center;
      padding: 10px 16px;
      border: 2px solid black;
      border-radius: 12px;
      font-size: 14px;
      color: #555;
      cursor: pointer;
      transition: border-color 0.3s, box-shadow 0.3s;
    }
    
    .toggle-switch:hover {
      border-color: red;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .toggle-switch:hover .form-check-label {
      font-weight: 600;
    }
    .tax-info {
      display : none;
    }

    .offers-section {
      display: flex;
      align-items: center;
    }
    
    .offers-button {
      background-color: white;
      border: 2px solid black;
      border-radius: 12px;
      padding: 10px 16px;
      font-size: 14px;
      color: #555;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .offers-button:hover {
      border-color: red;
      color: black;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      font-weight: 600;
    }
    
    .offers-button i {
      color: #e60023; /* red discount icon */
    }

      .hamburger-menu {
        display: none;
        padding: 10px 20px;
        font-size: 24px;
        cursor: pointer;
      }
    
      #mobileFilters {
        display: none;
        flex-direction: column;
        background-color: #fff;
        padding: 10px 20px;
        border-top: 1px solid #ccc;
      }
    
      .mobile-filter-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
      }
    
      @media screen and (max-width: 768px) {
        #filters {
          display: none;
        }
    
        .hamburger-menu {
          display: block;
        }
    
        .toggle-switch,
        .offers-section {
          display: none;
        }
      }
    

      @media (max-width: 768px) {
        .navbar-nav {
          display: flex;
          flex-direction: column; /* Stack navbar items vertically */
          align-items: center;
          width: 100%;
        }
      
        .navbar-nav .nav-item {
          text-align: center;
          padding: 8px 0;
        }
      
        .navbar-toggler {
          border: 1px solid #ddd;
          color: #333;
        }
      
        .navbar-collapse {
          flex-grow: 1;
          justify-content: center;
        }
      
        .d-flex.mx-auto {
          width: 90%; /* Limit the search bar width to avoid overflow */
          max-width: 400px;
        }
      
        .navbar-brand {
          flex-grow: 1; /* Ensure the brand takes up space */
          text-align: left; /* Align brand to the left */
        }
      
        .navbar-nav.ms-auto {
          display: none; /* Hide right items on mobile */
        }
      }
      
    
    
  </style>
    

